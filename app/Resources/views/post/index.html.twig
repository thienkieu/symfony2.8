{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        {% for post in paginator %}
            <h1>{{ post.title }}</h1>
            <p>{{post.short_text}}</p>
            <a href="/post?id={{post.id}}"> 
                {% trans %} 
                    read more >>
                {% endtrans %}  
            </a>
        {% endfor %}

        {% if pagesCount > 1 %}
        <nav aria-label="Page navigation">
            <ul class="pagination">
                    {% for i in range(1, pagesCount) %}
                        <li {% if i == currentPage %} class="active" {% endif %}>
                            <a href="?currentPage={{i}}">{{i}}</a>
                        </li>
                    {% endfor %}
            </ul>
        </nav>
        {% endif %}
    </div>
{% endblock %}

